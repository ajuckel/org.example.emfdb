<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.example.emfdb.Application">
         </run>
      </application>
   </extension>
   <extension
         id="perftest"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.example.emfdb.PerfTest">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.example.emfdb.Perspective"
            id="org.example.emfdb.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="org.example.emfdb.View"
            id="org.example.emfdb.view">
      </view>
      <view
            class="org.example.emfdb.DecoratedTestView"
            id="org.example.emfdb.decoratedtestview"
            name="Decorated Test View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="org.example.emfdb.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="Open Decorated Test View"
                  style="push">
               <parameter
                     name="org.eclipse.ui.views.showView.viewId"
                     value="org.example.emfdb.decoratedtestview">
               </parameter>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.example.emfdb.application"
            name="Sample EMF Databinding Application">
         <property
               name="appName"
               value="Sample EMF Databinding Application"/>
      </product>
   </extension>

</plugin>
